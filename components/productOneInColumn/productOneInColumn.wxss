/* components/productOneInColumn/productOneInColumn.wxss */
.product-list {
  overflow: hidden;
}
.product-item {
  width: 100%;
  display: flex;
  background-color: #fff;
  border-radius: 26rpx;
  margin: 10rpx 0;
  float: left;
  text-align: center;
}

.item-img {
  flex: 1;
  height: auto;
}

.item-img image {
  width: 100%;
  height: 100%;
  border-radius: 26rpx 0 0 26rpx;
}

.item-detail {
  width: 50%;
  display: flex;
  align-items: flex-start;
  flex-direction: column;
  justify-content: flex-start;
  padding: 20rpx 30rpx 20rpx 6%;
}

.item-name {
  width: 92%;
  text-align: left;
  height: 47rpx;
  display: flex;
  flex-direction:  column;
  align-content: flex-start;
  flex-shrink: 0;
  overflow: hidden;
  margin: 0 0 20rpx 0;
  font-size: 36rpx;
  font-weight: bold;
}

.item-price {
  color: #ff0000;
  font-weight: bold;
  text-align: left;
  margin: 0 0 20rpx;
  font-size: 24rpx;
}

.item-introduce {
  text-align: left;
  font-size: 30rpx;
  color: #5b5b5b;
  height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 92%;
  margin: 0 0 20rpx 0;
}