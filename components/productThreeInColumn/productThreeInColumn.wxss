/* components/productThreeInColumn/productThreeInColumn.wxss */
.product-list {
  overflow: hidden;
}
.product-item {
  width: 30%;
  float: left;
  text-align: center;
  margin: 10rpx 8rpx;
}

.product-item .item-img {
  /* width: 198rpx;
  height: 198rpx; */
  height: 150rpx;
}

.product-item .item-img image {
  width: 100%;
  height: 100%;
}

.product-item .item-name {
  text-align: left;
  height: 64rpx;
  display: flex;
  flex-direction:  column;
  align-content: flex-start;
  flex-shrink: 0;
  overflow: hidden;
  margin: 0;
  font-size: 34rpx;
}

.product-item .item-price {
  color: #ff0000;
  font-weight: bold;
  text-align: left;
}