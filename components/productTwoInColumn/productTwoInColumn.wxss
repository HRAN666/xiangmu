/* components/productTwoInColumn/productTwoInColumn.wxss */
.product-list {
  overflow: hidden;
}
.product-item {
  width: 49%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  border-radius: 26rpx;
  margin: 10rpx 0;
  float: left;
  text-align: center;
}

.product-item:nth-child(2n+1) {
  margin-right: 12rpx;
}

.item-img {
  width: 100%;
  height: 380rpx;
}

.item-img image {
  width: 100%;
  height: 100%;
  border-radius: 26rpx 26rpx 0 0;
}

.item-detail {
  width: 92%;
  padding: 0 20rpx;
}

.item-name {
  width: 92%;
  text-align: left;
  height: 96rpx;
  display: flex;
  flex-direction:  column;
  align-content: flex-start;
  flex-shrink: 0;
  overflow: hidden;
  margin: 10rpx 0 0;
  font-size: 34rpx;
}

.item-price {
  color: #ff0000;
  font-weight: bold;
  text-align: left;
  margin: 0 0 20rpx;
}

.item-introduce {
  text-align: left;
  font-size: 26rpx;
  color: #5b5b5b;
  height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 92%;
}